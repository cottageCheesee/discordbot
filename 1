@client.event
async def on_ready():
    print('We have logged in as {0.user}'.format(client))

@client.event
async def on_message(message):
    if message.author == client.user:
        return
    
      
    channel_name = message.channel.name
    info = str(message)
    cont = str(message.content)
    channel = str(message.channel)
    if 'request' in channel and cont.startswith(f'{prefix}rq'):
      await message.channel.send(texts[channel_name])
    if 'ban-words' in info:
      if cont.startswith(f'{prefix}bw'):
        ban_words.append(*(cont.split(' ')[1:]))
      elif cont.startswith(f'{prefix}bd'):
        if cont.split()[1] in ban_words:
          ban_words.remove(cont.split()[1])
      elif cont.startswith(f'{prefix}bl'):
        await message.channel.send(ban_words)
    if 'https:' in cont and ('al-chat' in channel or 'bot-use' in str(message.channel)):
    
       await message.delete()
    if cont.startswith(f'{prefix}pm') and 'partn' in info and ('blay' in info.lower() or 'od1nok' in info.lower()):
     
      for i in prts():
          await message.channel.send(i)    
    if message.content.startswith(f'{prefix}hello'):
        await message.channel.send('Hello!')

client.run(settings['TOKEN'])
